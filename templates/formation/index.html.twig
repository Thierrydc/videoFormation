            {% for formation in formations %}
                <div class="card">
                    <a href="">
                        <div class="card-content">
                            <h5>{{formation.title}}</h5>
                            <img src="assets/img/pasdephoto.jpg" alt="photo">
                            <p>Dur√©e : {{formation.duration ? formation.duration|date('H:i') : ''}}</p>
